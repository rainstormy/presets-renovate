{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"packageRules": [
		{
			// Merge patch upgrades of Node.js packages that generate the build
			// artefacts deployed into production.
			"matchDepNames": [
				"@tailwindcss/**",
				"autoprefixer",
				"postcss",
				"svgo",
				"tailwindcss",
				"vinxi",
				"vite"
			],
			"matchUpdateTypes": ["patch"],
			"automerge": true
		}
	]
}
